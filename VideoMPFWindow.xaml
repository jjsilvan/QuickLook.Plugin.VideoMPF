<UserControl x:Class="QuickLook.Plugin.VideoMPF.ViewerPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:QuickLook.Plugin.VideoMPF"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:Name="viewerPanel"
             d:DesignHeight="300"
             d:DesignWidth="500"
             mc:Ignorable="d">		
	<Grid x:Name="MediaPlayer" MouseWheel="Grid_MouseWheel" Background="White" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="265*"/>
            <ColumnDefinition Width="69*"/>
            <ColumnDefinition Width="692*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="53*" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <MediaElement Grid.Row="1" Name="MyMediaElement"  LoadedBehavior="Manual" Stretch="UniformToFill" ToolTip="MediaPlayer" Grid.ColumnSpan="3" Margin="0,0,0,24" Grid.RowSpan="2" />

        <StatusBar Grid.Row="2" HorizontalAlignment="Left" Grid.ColumnSpan="3">
            <StatusBar.ItemsPanel>
                <ItemsPanelTemplate>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                    </Grid>
                </ItemsPanelTemplate>
            </StatusBar.ItemsPanel>

            <StatusBarItem Grid.Row="0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Slider Name="Seeker" Margin="10,0,10,0" HorizontalAlignment="Center" Grid.Column="1" ToolTip="{Binding ElementName=PlayTime,Path=Text}" Thumb.DragStarted="Seek_Drag_Started"  Thumb.DragCompleted="Seek_Drag_Completed" ValueChanged="Seek_Value_Changed" Width="1000"/>
                </Grid>
            </StatusBarItem>
        </StatusBar>
        <StatusBar Grid.Row="3" HorizontalAlignment="Left" Grid.Column="2" Margin="247,0,0,0">
            <StatusBar.ItemsPanel>
                <ItemsPanelTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                    </Grid>
                </ItemsPanelTemplate>
            </StatusBar.ItemsPanel>

            <StatusBarItem Grid.Column="0" HorizontalAlignment="Left" >
                <TextBlock Name="PlayTime">00:00:00</TextBlock>
            </StatusBarItem>

            <StatusBarItem Grid.Column="1" >
            </StatusBarItem>

            <StatusBarItem Grid.Column="2" >
                <Button Name="PlayOrPause" Uid="Play" Width="50" Height="50" BorderThickness="0" Background="Transparent" Click="ActionListener" ToolTip="Play"/>
            </StatusBarItem>

            <StatusBarItem Grid.Column="3" >
            </StatusBarItem>

            <StatusBarItem Grid.Column="4" HorizontalAlignment="Right">
                <ProgressBar Name="Volume" ToolTip="{Binding ElementName=Volume, Path=Value}" Width="50" Height="12" Minimum="0" Maximum="1" Value="{Binding ElementName=MyMediaElement, Path=Volume}" />
            </StatusBarItem>

            <StatusBarItem Grid.Column="5" HorizontalAlignment="Right">
            </StatusBarItem>
        </StatusBar>
    </Grid>
</UserControl>
